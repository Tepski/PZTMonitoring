{
  "name": "electronquatro",
  "version": "1.0.0",
  "main": "main/main.js",
  "scripts": {
    "dev": "npm run dev --prefix renderer",
    "electron": "wait-on http://localhost:5173/ && npm start --prefix main",
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "build-renderer": "npm run build --prefix renderer",
    "dist": "npm run build-renderer && electron-builder"
  },
  "build": {
    "appId": "com.electronquatro.app",
    "productName": "PZT Monitoring",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main/**/*",
      "renderer/dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main/main.js"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "icon": "renderer/src/assets/npi.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "J. Ladrillono",
  "license": "ISC",
  "description": "Small software to be used for HTP process under PZT",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "concurrently": "^9.1.2",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "lucide-react": "^0.488.0",
    "react-icons": "^5.5.0"
  }
}
